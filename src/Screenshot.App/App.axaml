<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Screenshot.App.App"
             RequestedThemeVariant="Light">
  <Application.Styles>
    <FluentTheme />
    <Style Selector="Window">
      <Setter Property="FontFamily" Value="Avenir Next, Helvetica Neue, Arial" />
      <Setter Property="FontSize" Value="12" />
    </Style>
    <Style Selector="TextBlock">
      <Setter Property="Foreground" Value="#101820" />
    </Style>
    <Style Selector="Button">
      <Setter Property="Background" Value="#E9EDF2" />
      <Setter Property="BorderBrush" Value="#B9C4D0" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="8" />
      <Setter Property="Padding" Value="10,6" />
      <Setter Property="Foreground" Value="#101820" />
    </Style>
    <Style Selector="TextBox">
      <Setter Property="Background" Value="#FFFFFF" />
      <Setter Property="BorderBrush" Value="#B9C4D0" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Padding" Value="6,4" />
      <Setter Property="Foreground" Value="#101820" />
    </Style>
    <Style Selector="ComboBox">
      <Setter Property="Background" Value="#FFFFFF" />
      <Setter Property="BorderBrush" Value="#B9C4D0" />
      <Setter Property="BorderThickness" Value="1" />
      <Setter Property="CornerRadius" Value="6" />
      <Setter Property="Padding" Value="6,4" />
      <Setter Property="Foreground" Value="#101820" />
    </Style>
    <Style Selector="CheckBox">
      <Setter Property="Foreground" Value="#101820" />
    </Style>
  </Application.Styles>
</Application>
