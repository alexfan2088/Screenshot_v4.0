<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Screenshot.App.RegionSelectionWindow"
        TransparencyLevelHint="Transparent"
        Background="#40000000"
        SystemDecorations="None"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaTitleBarHeightHint="-1"
        CanResize="False"
        Topmost="True">
  <Canvas Name="SelectionCanvas">
    <Border Name="SelectionBorder"
            BorderBrush="#FF4A90E2"
            BorderThickness="2"
            Background="#30FFFFFF"
            IsVisible="False" />
    <Border Name="InfoBadge"
            Background="#CC000000"
            CornerRadius="6"
            Padding="6"
            IsVisible="False">
      <TextBlock Name="InfoText" Foreground="White" FontSize="12" />
    </Border>
  </Canvas>
</Window>
