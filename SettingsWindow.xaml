<Window x:Class="Screenshot_v3_0.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="录制设置" Height="450" Width="500"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题 -->
        <TextBlock Text="视频录制设置" FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,20" Grid.Row="0"/>

        <!-- 设置内容 -->
        <TabControl Grid.Row="1">
            <!-- 视频设置 -->
            <TabItem Header="视频">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <!-- 分辨率比例 -->
                        <TextBlock Text="分辨率比例" Margin="0,10,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Slider x:Name="SliderResolution" Minimum="10" Maximum="100" 
                                    Value="100" TickFrequency="10" IsSnapToTickEnabled="True"
                                    Width="300" Margin="0,0,10,0" ValueChanged="SliderResolution_ValueChanged"/>
                            <TextBlock x:Name="TxtResolution" Text="100%" Width="60" 
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Text="10% = 最小文件，100% = 原画质" 
                                   FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                        <!-- 帧率 -->
                        <TextBlock Text="帧率 (FPS)" Margin="0,10,0,5"/>
                        <ComboBox x:Name="ComboFrameRate" Width="200" 
                                  SelectionChanged="ComboFrameRate_SelectionChanged">
                            <ComboBoxItem Content="15 fps (静态内容)" Tag="15"/>
                            <ComboBoxItem Content="24 fps (电影标准)" Tag="24"/>
                            <ComboBoxItem Content="30 fps (推荐)" Tag="30"/>
                            <ComboBoxItem Content="60 fps (高流畅度)" Tag="60" IsSelected="True"/>
                        </ComboBox>
                        <TextBlock Text="帧率越高，文件越大" 
                                   FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                        <!-- 视频码率 -->
                        <TextBlock Text="视频码率" Margin="0,10,0,5"/>
                        <ComboBox x:Name="ComboVideoBitrate" Width="200"
                                  SelectionChanged="ComboVideoBitrate_SelectionChanged">
                            <ComboBoxItem Content="低 (1 Mbps)" Tag="Low"/>
                            <ComboBoxItem Content="中 (3 Mbps)" Tag="Medium"/>
                            <ComboBoxItem Content="高 (5 Mbps)" Tag="High" IsSelected="True"/>
                            <ComboBoxItem Content="自动" Tag="Auto"/>
                        </ComboBox>
                        <TextBlock Text="码率越高，质量越好，文件越大" 
                                   FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 音频设置 -->
            <TabItem Header="音频">
                <ScrollViewer>
                    <StackPanel Margin="10">
                        <!-- 采样率 -->
                        <TextBlock Text="采样率" Margin="0,10,0,5"/>
                        <ComboBox x:Name="ComboSampleRate" Width="200"
                                  SelectionChanged="ComboSampleRate_SelectionChanged">
                            <ComboBoxItem Content="22.05 kHz (节省空间)" Tag="22050"/>
                            <ComboBoxItem Content="44.1 kHz (标准)" Tag="44100" IsSelected="True"/>
                        </ComboBox>
                        <TextBlock Text="采样率影响音频质量" 
                                   FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>

                        <!-- 音频比特率 -->
                        <TextBlock Text="音频比特率" Margin="0,10,0,5"/>
                        <ComboBox x:Name="ComboAudioBitrate" Width="200"
                                  SelectionChanged="ComboAudioBitrate_SelectionChanged">
                            <ComboBoxItem Content="64 kbps (低质量)" Tag="64"/>
                            <ComboBoxItem Content="128 kbps (标准)" Tag="128"/>
                            <ComboBoxItem Content="192 kbps (高质量)" Tag="192" IsSelected="True"/>
                        </ComboBox>
                        <TextBlock Text="比特率越高，音质越好，文件越大" 
                                   FontSize="10" Foreground="Gray" Margin="0,0,0,10"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- 按钮 -->
        <StackPanel Grid.Row="2" Margin="0,20,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="确定" Width="80" Margin="0,0,10,0" 
                        Click="BtnOK_Click"/>
                <Button Content="取消" Width="80" Click="BtnCancel_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
